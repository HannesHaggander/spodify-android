<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_holder_search_height">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/search_show_image"
        android:layout_width="@dimen/view_holder_search_height"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/search_show_text"
        style="@style/spodify.text.regular"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:padding="@dimen/medium_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/search_show_image" />

</androidx.constraintlayout.widget.ConstraintLayout>